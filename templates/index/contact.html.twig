{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<main>
<main class="bg-white min-h-screen py-12">
  <div class="container mx-auto px-4 max-w-2xl">
    <h1 class="text-3xl font-bold text-ow-pink mb-8">Contact-us</h1>
    
      <div>{{ form_row(contactForm.firstname) }}
        <label class="block text-ow-dark-blue mb-1"></label>
        <input class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-ow-pink">
      </div>
      
      <div>{{ form_row(contactForm.lastname) }}
        <label class="block text-ow-dark-blue mb-1"></label>
        <input class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-ow-pink">
      </div>
      
      <div>{{ form_row(contactForm.email) }}
        <label class="block text-ow-dark-blue mb-1"></label>
        <textarea class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-ow-pink"></textarea>
      </div>

      <div>{{ form_row(contactForm.subject) }}
        <label class="block text-ow-dark-blue mb-1"></label>
        <textarea rows="5" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-ow-pink"></textarea>
      </div>
      <div>{{ form_row(contactForm.message) }}
        <label class="block text-ow-dark-blue mb-1"></label>
        <textarea rows="5" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-ow-pink"></textarea>
      </div>
  </div>
</main>
{% endblock %}
