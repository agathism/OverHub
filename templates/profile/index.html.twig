{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
<div class="my-14 p-6">
  <div class="max-w-4xl mx-auto bg-ow-blue rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-ow-white mb-6">Welcome to your profile, {{ app.user.email }} !</h1>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold text-ow-white mb-4">Personal Informations</h2>
      <div class="text-ow-white">
        <p class="text-ow-pink"><span class="font-semibold text-ow-white">Email :</span> {{ app.user.email }}</p>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="text-2xl font-semibold text-ow-white mb-4">Actions</h2>
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="{{ path('app_profile_edit') }}" class="inline-block px-6 py-3 bg-ow-pink text-ow-white hover:bg-ow-white hover:text-ow-pink rounded-md font-semibold transition-colors">
          Edit your profil
        </a>
        <a href="{{ path('app_logout') }}" class="inline-block px-6 py-3 bg-ow-pink text-ow-white hover:bg-ow-white hover:text-ow-pink rounded-md font-semibold transition-colors">
          Disconnect
        </a>
      </div>
    </section>
  </div>
</div>
{% endblock %}
