{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
 <form method="post">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}
    <div class="flex items-center justify-center mt-20">
    <div class="bg-gray-900 border-[4px] border-blue-700 rounded-2xl hover:border-blue-700 transition-all duration-200">
      <div class="mx-auto flex items-center space-y-4 py-16 px-12 font-semibold text-gray-500 flex-col"> 
        <h1 class="text-white text-2xl">Sign in</h1>
        <input class="w-full p-2 bg-ow-blue rounded-md border border-gray-700 focus:border-blue-700 hover:border-blue-600 transition-all duration-200" placeholder="example@domain.com" type="email" name="email" id=""/>
      <input class="w-full p-2 bg-ow-blue rounded-md border border-gray-700 focus:border-blue-700 hover:border-blue-600 transition-all duration-200" placeholder="Password" type="password" name="password" id=""/>
      <input
        class="w-full p-2 bg-gray-50 rounded-full font-bold text-gray-900 border-[4px] border-gray-700 hover:border-blue-500 transition-all duration-200"
        type="submit"
        id=""
      />
        <p>
          Don't have an account?
          <a class="font-semibold text-white hover:text-ow-pink transition-all duration-200" href=""
            >Sign up</a>
        </p>
      </div>
  </div>
</div>
{% endblock %}
