      <div class="flex justify-evenly gap-6 rounded-lg p-4 text-white opacity-90"> 
        <img src="{{ asset(character.imagePath) }}" class="w-30">
        </div>
        <div class="flex flex-col text-white">
        <p class="text-2xl font-bold text-center">{{character.name}}</p>
      </div>
    </div>
    {% endfor %}
    </div>
  </main>
{% endblock %}
