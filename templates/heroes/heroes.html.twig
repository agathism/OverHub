{% extends 'base.html.twig' %}

{% block title %}
  Heroes
{% endblock %}

{% block body %}
  <main>
    <div class="px-4">
      <h1 class="text-3xl font-bold text-ow-pink mt-8  text-center">All Heroes</h1>

      <!-- Tanks -->
      <div class="flex flex-col items-center">
      <span class="flex flex-row justify-center items-center border border-ow-pink bg-ow-pink rounded-md w-40 h-12 my-8">
      <img src="{{ asset(roleTank.imagePath) }}" class="w-12 h-10">
      <h2 class="text-white font-medium text-xl uppercase">{{roleTank.name}}</h2>
      </span>
      <div class="flex flex-row flex-wrap gap-5 justify-center mt-4">
      {% for character in tanks %}
      <div class="relative overflow-hidden gap-5 w-1/6 pb-4 rounded-xl bg-ow-blue drop-shadow-xl transform transition duration-300 hover:scale-110 ">
      <a href="{{ path('app_hero', { id: character.id }) }}">
      <div class="flex justify-evenly gap-6 rounded-lg p-4 text-white opacity-90"> 
        <img src="{{ asset(character.imagePath) }}" class="w-30">
        </div>
        <div class="flex flex-col text-white">
        <p class="text-2xl font-bold text-center">{{character.name}}</p>
      </div>
    </div>
    {% endfor %}

      <!-- Damage -->
      <div class="flex flex-col items-center">
      <span class="flex flex-row justify-center items-center border border-ow-pink bg-ow-pink rounded-md w-40 h-12 my-8">
      <img src="{{ asset(roleDps.imagePath) }}" class="w-12 h-10">
      <h2 class="text-white font-medium text-xl uppercase">{{roleDps.name}}</h2>
      </span>
