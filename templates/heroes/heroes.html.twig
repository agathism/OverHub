      <a href="{{ path('app_hero', { id: character.id }) }}">
      <div class="flex justify-evenly gap-6 rounded-lg p-4 text-white opacity-90"> 
        <img src="{{ asset(character.imagePath) }}" class="w-30">
        </div>
        <div class="flex flex-col text-white">
        <p class="text-2xl font-bold text-center">{{character.name}}</p>
      </div>
    </div>
    {% endfor %}

      <!-- Support -->
      <div class="flex flex-col items-center">
      <span class="flex flex-row justify-center items-center border border-ow-pink bg-ow-pink rounded-md w-40 h-12 my-8">
      <img src="{{ asset(roleSupport.imagePath) }}" class="w-12 h-10">
      <h2 class="text-white font-medium text-xl uppercase">{{roleSupport.name}}</h2>
      </span>
      <div class="flex flex-row flex-wrap gap-5 justify-center mt-4">
      {% for character in supports %}
